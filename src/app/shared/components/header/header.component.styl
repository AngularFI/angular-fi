@import '../../../../styles/globals/variables'
@import '../../../../styles/globals/mixins'

:host
    display block
    background-color color-menu-background
    background-image url('/assets/images/background.jpg')
    background-repeat no-repeat
    background-position middle center
    background-size cover
    padding 0
    margin 0
    border-bottom 1px solid black

    +for_breakpoint(not_mobile)
        padding-top 3.5em

    &.loading
        overflow hidden
        max-height 100%

        .logo
            width 80%
            padding 10%

.container
    max-width max-width
    margin 0 auto

.logo
    width 100px
    padding 10px
    transition all .5s ease-out

    +for_breakpoint(mobile)
        display block
        margin 0 auto
        
    +for_breakpoint(not_mobile)
        display inline-block
        vertical-align bottom
        margin 0

h1
    display block
    color white
    margin 0 0 0.25em 0
    padding 0

nav
    font-size 1.5em
    margin 0
    padding 0
    opacity 1

    +for_breakpoint(mobile)
        display block
        text-align center
        
    +for_breakpoint(not_mobile)
        display inline-block
        vertical-align bottom
        margin-left 1em

.menu
    display block

    a
        text-decoration none
        padding 10px

        +for_breakpoint(mobile)
            color black
            background-color rgba(color-menu, 0.5)
            display block

            &:hover
                background-color rgba(color-menu, 0.75)

            &.active
                color color-menu
                background-color rgba(color-menu-active, 0.5)
    
                &:hover
                    background-color rgba(color-menu-active, 0.75)


        +for_breakpoint(not_mobile)
            color color-menu
            border-bottom 10px solid transparent;
            display inline-block
            vertical-align bottom

            &:hover
                background-color rgba(color-menu, 0.25)
                border-color color-menu

            &.active
                color color-menu-active
                border-color color-menu-active

                &:hover
                    background-color rgba(color-menu-active, 0.25)

img
    width 100%
    height auto
