@import '../../../shared/styles/variables'
@import '../../../shared/styles/mixins'

:host
  display block
  background-color white
  margin 0.5em
  padding 0

.icon
  display inline-block
  vertical-align top
  width 2em
  height 2em
  margin 0.5em
  background-image url("/assets/images/twitter-bird-blue.svg")
  background-size 2em 2em
  background-position top left
  background-repeat no-repeat

.from
  display inline-block
  vertical-align top
  width calc(100% - 4em)
  margin 0.5em 0.5em 0.5em 0em

.message
  padding 0.5em

.image
  line-height 0
  margin 0
  padding 0
  img
    display block
    width 100%
    height auto

a
  text-decoration none
  font-weight bold